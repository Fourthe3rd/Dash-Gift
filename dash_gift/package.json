{
  "name": "dash_gift",
  "version": "1.0.0",
  "description": "Solana-based gift card platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src/**/*.ts --exec ts-node src/index.ts",
    "migrate": "node ./migrate migrate",
    "migrate:rollback": "node ./migrate rollback",
    "migrate:create": "node ./migrate create",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down"
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.614.0",
    "@aws-sdk/client-s3": "^3.614.0",
    "@sendgrid/mail": "^8.1.3",
    "@solana/web3.js": "^1.95.2",
    "axios": "^1.11.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-pg-migrate": "^7.6.1",
    "pg": "^8.12.0",
    "sql-migrations": "^1.0.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
